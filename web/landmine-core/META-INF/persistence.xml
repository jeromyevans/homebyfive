<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

  <!-- This is the production in-container persistence unit -->

  <persistence-unit name="landmine-core">

    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <jta-data-source>jdbc/LandmineDS</jta-data-source>

    <mapping-file>META-INF/queries_landmine_premise.xml</mapping-file>
    <mapping-file>META-INF/queries_address.xml</mapping-file>
    <mapping-file>META-INF/queries_party.xml</mapping-file>
    <mapping-file>META-INF/queries_framework_substitution.xml</mapping-file>

    <jar-file>Enterprise.jar</jar-file>
    <jar-file>Framework.jar</jar-file>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"/>
    </properties>

  </persistence-unit>
</persistence>