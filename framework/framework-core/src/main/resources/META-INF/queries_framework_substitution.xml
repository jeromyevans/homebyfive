<?xml version="1.0" encoding="UTF-8"?>

<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_1_0.xsd"
    version="1.0">

    <!-- define named queries for this module -->

    <!-- Get all the substitutions in a group
     @param groupName
       -->
    <named-query name="substitution.byGroup">
        <query>
            select sub from Substitution sub where sub.groupName = :groupName
        </query>
        <hint name="org.hibernate.cacheable" value="true"/>      
    </named-query>

</entity-mappings>
